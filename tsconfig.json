{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "es2017", "es2019", "es2020", "es2021", "dom"],
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@/*": ["core/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules", ".github", ".husky", "docs", "types/types-tests.tsx", "examples"]
}
