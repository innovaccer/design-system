{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@/*": ["core/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules", ".github", ".husky", "docs", "types/types-tests.tsx", "examples"]
}
