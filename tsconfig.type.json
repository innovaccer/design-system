{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "incremental": true,
    "esModuleInterop": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "es6",
      "es7",
      "es2017",
      "es2019",
      "es2020",
      "es2021",
      "dom"
    ],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "core/*"
      ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "core/**/__tests__",
    "core/**/__stories__",
    "**/*.story.tsx",
    ".github",
    "types",
    "docs",
    "examples"
  ]
}
