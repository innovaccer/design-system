{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/.lib",
    "incremental": true,
    "esModuleInterop": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": [
    "core",
    "dist",
    "build",
    "node_modules",
    "src/**/__tests__",
    "src/**/__stories__",
    ".github",
    "types"
  ]
}