{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "incremental": true,
    "esModuleInterop": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "core/*"
      ],
      "@css/*": [
        "css/src/*"
      ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "types": []
  },
  "include": [
    "core/**/*.ts",
    "core/**/*.tsx",
    "core/global.d.ts",
    "core/index.type.tsx"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "node_modules/@types/node/**/*",
    "node_modules/@remix-run/**/*",
    "node_modules/undici-types/**/*",
    "core/**/__tests__",
    "core/**/__stories__",
    "**/*.story.tsx",
    ".github",
    "types",
    "docs",
    "examples"
  ]
}
